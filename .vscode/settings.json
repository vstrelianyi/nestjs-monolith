{
  "editor.tabSize": 2,
  "editor.formatOnSave": true,
  "editor.rulers": [150],
  "editor.fontSize": 16,
  "editor.fontFamily": "Fira Code",
  "editor.fontLigatures": true,

	"tailwindCSS.experimental.classRegex": [
    ["cva\\(((?:[^()]|\\([^()]*\\))*)\\)", "[\"'`]([^\"'`]*).*?[\"'`]"],
    ["cx\\(((?:[^()]|\\([^()]*\\))*)\\)", "(?:'|\"|`)([^']*)(?:'|\"|`)"]
  ],

	"prettier.requireConfig": true,
  "prettier.configPath": "_.prettierrc"
}
